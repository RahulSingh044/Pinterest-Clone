<% include ./partials/header %>

  <div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1558591710-4b4a1ae0f04d?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
    <div class="w-min h-min drop-shadow-2xl bg-white px-20 py-8 rounded-lg m-8">
      <img class="size-10 mx-auto" src="/images/logo/pinterest-logo.png" alt="">
      <h1 class="text-base text-center mt-5 font-semibold  text-xl">Welcome to Pinterest</h1>
      <form action="/login" method="post">
        <h2 class="mt-5 text-sm text-slate-600">Username</h3>
          <input class="border-solid border-4 border-grey-400 active:border-blue-300 focus:border-blue-300 focus:outline-none px-5 py-0.5 rounded-lg" type="text" name="username"
            placeholder="Username">
          <h2 class="text-sm text-slate-600">Password</h3>
            <input class="border-solid border-4 active:border-blue-300 focus:border-blue-300 focus:outline-none border-grey-400 px-5 py-0.5 rounded-lg" type="password" name="password"
              placeholder="Password">
            <h4 class="text-xs font-semibold"><a href="#">Forgotten your password?</a></h4>
            <input class="bg-red-500  text-white font-bold py-2 w-full rounded-full mt-5 cursor-pointer" type="button"
              value="Log in">
      </form>

      <h3 class="text-center mt-1 text-sm font-semibold">OR</h3>
      <button
        class="inline-flex h-10 w-full items-center mt-1 justify-center gap-2 rounded border border-slate-300 bg-blue-600 text-white p-2 text-sm font-medium text-black outline-none focus:ring-2 focus:ring-[#333] focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-60 rounded-full "><img
          src="https://www.svgrepo.com/show/331386/facebook-v2.svg" alt="Facebook"
          class="h-[18px] w-[18px] text-white ">Continue with Facebook
      </button>
      <button
        class="inline-flex mt-1.5 h-10 w-full items-center justify-center gap-2 rounded border border-slate-300 bg-white p-2 text-sm font-medium text-black outline-none focus:ring-2 focus:ring-[#333] focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-60 rounded-full "><img
          src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google" class="h-[18px] w-[18px]">Continue
        with Google
      </button>
      <div class="mt-2">
        <p class="text-[9px] text-center">By continuing, you agree to Pinterest's</p>
        <p class="text-[9px] text-center"><span class="font-bold text-[9px] ">Terms of Service</span>and acknowledge that you've</p>
        <p class="text-[9px] text-center">read our <span class="font-bold text-[9px] ">Privacy Policy. Notice at collection</span></p>
        <hr class="my-1 text-center">
        <p class="font-bold text-[9px] text-center"><a href="/register">Not on Pinterest yet? Sign up</a></p>
        <p class="text-[9px] text-center">Are you a business? <span class="font-bold text-[9px] ">Get started here!</span></p>
      </div>
    </div>
  </div>

  <% include ./partials/footer %>