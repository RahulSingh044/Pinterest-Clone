<% include ./partials/header.ejs %>

    <div
        class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1558591710-4b4a1ae0f04d?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
        <div class="w-min h-min drop-shadow-2xl bg-white px-20 py-3 rounded-3xl m-8">
            <img class="size-10 mx-auto" src="/images/logo/pinterest-logo.png" alt="">
            <h1 class="text-base text-center mt-5 font-semibold  text-xl">Create New Acoount</h1>
            <form action="/register" method="post">
                <h2 class="mt-5 text-sm text-slate-600">Name</h3>
                    <input
                        class="border-solid border-4 border-grey-400 
                        active:border-blue-300 focus:border-blue-300 focus:outline-none px-5 py-0.5 mt-1 rounded-lg"
                        type="text" name="fullname" placeholder="Name">
                <h2 class="mt-1 text-sm text-slate-600">Username</h3>
                    <input
                        class="border-solid border-4 border-grey-400 
                        active:border-blue-300 focus:border-blue-300 focus:outline-none px-5 py-0.5 mt-1 rounded-lg"
                        type="text" name="username" placeholder="Username">
                    <h2 class="text-sm text-slate-600 mt-1">Email</h3>
                        <input
                            class="border-solid border-4 border-grey-400 active:border-blue-300 focus:border-blue-300 focus:outline-none px-5 mt-1 py-0.5 rounded-lg"
                            type="email" name="email" placeholder="Email">
                        <h2 class="text-sm text-slate-600 mt-1">Password</h3>
                            <input
                                class="border-solid border-4 active:border-blue-300 focus:border-blue-300 focus:outline-none border-grey-400 mt-1 px-5 py-0.5 rounded-lg"
                                type="password" name="password" placeholder="Create a Password">
                            <h2 class="text-sm text-slate-600 mt-1">DOB</h3>
                                <input
                                    class="border-solid mt-1 border-4 w-full active:border-blue-300 focus:border-blue-300 focus:outline-none border-grey-400 px-5 py-0.5 rounded-lg"
                                    type="date" name="dob" placeholder="DOB">
                                <input
                                    class="bg-red-500  text-white font-bold py-2 w-full rounded-full mt-2 cursor-pointer"
                                    type="submit" value="Continue">
            </form>

            <h3 class="text-center mt-1 text-sm font-semibold">OR</h3>

            <button
                class="inline-flex mt-1.5 h-10 w-full items-center justify-center gap-2 rounded border border-slate-300 bg-white p-2 text-sm font-medium text-black outline-none focus:ring-2 focus:ring-[#333] focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-60 rounded-full "><img
                    src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google"
                    class="h-[18px] w-[18px]">Continue
                with Google
            </button>
            <div class="mt-2">
                <p class="text-[9px] text-center">By continuing, you agree to Pinterest's</p>
                <p class="text-[9px] text-center"><span class="font-bold text-[9px] ">Terms of Service</span>
                    acknowledge that you've</p>
                <p class="text-[9px] text-center">read our <span class="font-bold text-[9px] ">Privacy Policy.
                        Notice at collection</span></p>

                <p class=" my-3 text-xs text-center">Already a member? <span class="font-bold text-xs"><a href="/">Log
                            in</a></span></p>
            </div>
        </div>

    </div>

