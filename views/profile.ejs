<% include ./partials/header %>
    <% include ./partials/Navbar %>

        <div class="profile w-full min-h-screen p-5">
            <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
                <input type="file" name="image">
            </form>
            <div class="profdetails flex flex-col items-center mt-8 justify-center text-center ">
                <div class="relative">
                    <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 bg-white rounded-full">
                        <i class="ri-pencil-fill"></i>
                    </span>
                    <div class="w-28 h-28 rounded-full bg-zinc-400 border-2 border-black overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
                    </div>
                </div>
                <h1 class="font-bold mt-2 text-[35px]">
                    <%= user.fullname %>
                </h1>
                <h3 class="text-slate-600 text-md"><i class="fa-brands fa-pinterest"></i>
                    <%= user.username %>
                </h3>
                <a href="/edit" class="mt-2 px-7 py-2 bg-zinc-300 text-s font-semibold rounded-full">Edit</a>
                <a href="/add" class=" mt-3 px-5 py-3 bg-red-500 text-white rounded-xl font-semibold text-xs ">Add New
                    Post
                </a>
            </div>
            <div class="flex items-center justify-center mt-4  gap-4">
                <a href="/profile"
                    class="px-5 py-1 bg-white border-4 border-white hover:bg-grey-500 border-b-black text-s font-semibold rounded-xl">Created</a>
                <a href="/saved"
                    class="px-5 py-1 bg-white border-4 border-white hover:bg-grey hover:border-b-black text-s font-semibold rounded-xl">Saved</a>
            </div>
            <div class="cards flex flex-wrap gap-10 mt-7 px-2">
                <div class="card">
                    <div class="w-52 h-40 bg-zinc-500  rounded-lg">
                        <img class="overflow-hidden object-fit w-full h-full rounded-lg object-fit"
                            src="/images/uploads/<%= user.posts[0].image %>" alt="">
                    </div>
                    <a href="/show/posts">
                        <h3 class="text-xl font-semibold mt-2">Your Pins</h3>
                    </a>
                    <h5 class="text-sm font-medium">
                        <%= user.posts.length%>
                    </h5>
                </div>
            </div>
        </div>

        <script>
            document.querySelector("#uploadicon").addEventListener("click", function () {
                document.querySelector("#uploadform input").click();
            })

            document.querySelector("#uploadform input").addEventListener("change", function () {
                document.querySelector("#uploadform").submit();
            })
        </script>

        <% include ./partials/footer %>